<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED1D5">

    <!-- Top Wave -->
    <ImageView
        android:id="@+id/topWave"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/top_wave2" />

    <!-- Title on the Wave -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-medium"
        android:text="Are you starting from scratch?"
        android:textColor="#447A80"
        android:textSize="18sp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topWave"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <!-- YES Button -->
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#DCE9EA"
            android:fontFamily="sans-serif-medium"
            android:text="YES"
            android:textColor="#447A80"
            android:textSize="16sp" />

        <!-- NO Button -->
        <Button
            android:id="@+id/btn_no"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:backgroundTint="#DCE9EA"
            android:fontFamily="sans-serif-medium"
            android:text="NO"
            android:textColor="#447A80"
            android:textSize="16sp" />
    </LinearLayout>

</RelativeLayout>