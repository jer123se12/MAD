<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED1D5"
    android:gravity="center"
    android:orientation="vertical">

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="What Language Can You Speak"
        android:textColor="#333"
        android:textSize="20sp" />

    <!-- Search Bar -->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@android:drawable/edit_text"
        android:hint="Type here in your native Language"
        android:padding="10dp" />

    <!-- RecyclerView for Language Selection -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_languages"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="#DCE9EA" />

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#447A80"
        android:text="Next"
        android:textColor="#FFF" />
</LinearLayout>