<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#D0E6E6"
    android:padding="20dp">

    <!-- Title Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pls upload your vocab list"
        android:textSize="16sp"
        android:textColor="#2C4F4F"
        android:layout_marginBottom="20dp"/>

    <!-- Upload Box (for Drag and Drop) -->
    <LinearLayout
        android:id="@+id/upload_box"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#E5F4F4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="5dp"
        android:layout_marginBottom="20dp">

        <!-- Upload Icon -->
        <ImageView
            android:id="@+id/upload_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_upload"
            android:tint="#2C4F4F" />

        <!-- Upload Message -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a file or drag and drop it here"
            android:textSize="14sp"
            android:textColor="#2C4F4F"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <!-- Browse Button -->
        <Button
            android:id="@+id/btn_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse"
            android:backgroundTint="#0A5F5F"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <!-- Selected File Name -->
    <TextView
        android:id="@+id/txt_file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No file selected"
        android:textSize="14sp"
        android:textColor="#2C4F4F"
        android:gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Next"
        android:backgroundTint="#6FA7A7"
        android:textColor="#FFFFFF"
        android:enabled="false"/>
</LinearLayout>